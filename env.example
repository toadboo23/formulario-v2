# Configuración de la Base de Datos
DB_HOST=postgres
DB_PORT=5432
DB_NAME=formularios_db
DB_USER=formularios_user
DB_PASSWORD=formularios_password

# Configuración del Servidor
NODE_ENV=production
PORT=8081

# JWT Secret (Cambiar en producción)
JWT_SECRET=formularios_jwt_secret_key_2024_default
JWT_SECRET_SUFFIX=default

# CORS Configuration - IMPORTANTE: Incluir todos los orígenes necesarios
# Para desarrollo local:
# CORS_ORIGIN=http://frontend,http://localhost:8082,http://localhost,http://127.0.0.1:8082
# Para producción con IP específica:
# CORS_ORIGIN=http://frontend,http://localhost:8082,http://localhost,http://69.62.107.86:8082,https://tu-dominio.com
# Para múltiples dominios:
# CORS_ORIGIN=http://frontend,http://localhost:8082,http://localhost,http://69.62.107.86:8082,https://formularios.solucioning.com,https://app.solucioning.com
CORS_ORIGIN=http://frontend,http://localhost:8082,http://localhost,http://69.62.107.86:8082,https://tu-dominio.com

# Frontend Configuration
FRONTEND_PORT=8082
NGINX_HOST=localhost
NGINX_PORT=80

# Production URL (Cambiar en producción)
PRODUCTION_URL=https://tu-dominio.com

# Docker Configuration
COMPOSE_PROJECT_NAME=formularios 